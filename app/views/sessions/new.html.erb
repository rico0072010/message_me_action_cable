<div>
  <h1 class="ui center aligned header">Welcome to MessageMe Chat App</h1>
</div>
<h3 class="ui center aligned icon header">
  <i class="power off circular orange icon"></i>
  Log in to continue
</h3>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui orange medium button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui orange big button">
        <i class="signup inverted icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>